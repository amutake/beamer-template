\mode<presentation>

%% see `/usr/local/texlive/YEAR/texmf-dist/tex/latex/beamer/`

%% Basic Theme
\usecolortheme{rose}
\usefonttheme{professionalfonts}
\useinnertheme{circles}
\useoutertheme[subsection=false]{amutakebars}

%% Custom Template
\setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}

%% Custom Color
\definecolor{themecolor}{HTML}{0B1880}   % ここを変えるとタイトルの色とかかわる
\definecolor{titlebg}{HTML}{F0F0F5}      % ここを変えるとタイトルの背景の色が変わる
\definecolor{normalbg}{HTML}{FFFFFF}     % ここを変えると背景の色が変わる

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{palette primary}{fg=themecolor!60!black,bg=gray!30!white}
\setbeamercolor*{palette secondary}{fg=themecolor!70!black,bg=gray!15!white}
\setbeamercolor*{palette tertiary}{bg=gray!10!white,fg=themecolor!20!black}
\setbeamercolor*{palette quaternary}{fg=themecolor,bg=gray!5!white}
\setbeamercolor{titlelike}{bg=titlebg,fg=themecolor}
\setbeamercolor{frametitle}{bg=titlebg,fg=themecolor}
\setbeamercolor{frametitle right}{bg=gray!60!white}
\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}
\setbeamercolor{local structure}{fg=themecolor!80!black} % enumerate, itemize の色
\setbeamercolor{footline}{fg=black,bg=black}
\setbeamercolor{normal text}{bg=normalbg}

%% Custom Font
%% see `beamerfontthemedefault.sty`
\setbeamerfont{frametitle}{size=\LARGE}
\setbeamerfont{title}{size=\LARGE}
\setbeamerfont{footline}{size=\footnotesize}

\mode
<all>
