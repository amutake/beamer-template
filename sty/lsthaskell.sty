\lstdefinelanguage{Haskell}{
  mathescape=false,             % '$' appear often
  texcl=false,
  sensitive=true,
  %% Comments
  morecomment=[l]{--},
  morecomment=[n]{\{-}{-\}},    % Allow nesting
  commentstyle={\ttfamily\color{gray}},
  %% keywords
  morekeywords=[1]{
    module, import, where, data, type, newtype, instance, class,
    do, let, in, if, then, else, case, of
  },
  keywordstyle=[1]{\ttfamily\color{dkblue}},
  %% string
  morestring=[b]",
  stringstyle=\ttfamily\color{dkviolet},
  showstringspaces=false,
  %% colors
  identifierstyle={\ttfamily\color{black}},
  %%
  breaklines=true,
  captionpos=b,
  keepspaces=true,
  columns=[l]fullflexible,
}
